<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_background"
    tools:context=".view.ActivitiesListActivity">

    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="@color/dark_blue_background"
        tools:ignore="InvalidId" />

    <TextView
        android:id="@+id/text_viewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/page_activities"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view_header"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/random_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_random"
        app:tint="#263C4E"
        app:layout_constraintBottom_toBottomOf="@+id/text_viewModel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_viewModel"
        app:layout_constraintTop_toTopOf="@+id/text_viewModel"
        android:contentDescription="@string/random_button" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_header"
        />


</androidx.constraintlayout.widget.ConstraintLayout>